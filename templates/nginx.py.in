def install_nginx():
    env.user = '${config:user}'
    sudo('echo "deb http://packages.dotdeb.org squeeze all" >
         /etc/apt/sources.list.d/dotdeb.list')
    sudo('gpg --keyserver keys.gnupg.net --recv-key 89DF5277 && gpg -a --export
         89DF5277 | apt-key add -')
    sudo('apt-get update')
    sudo('apt-get install nginx')

