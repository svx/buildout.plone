@roles('testserver')
def stop_testing():
    env.user = '${config:app_user}'
    projectname = '${config:projectname}'

    with cd('/home/{user}/sites/{project}/buildout'.format(user=username, project=projectname))
        run('./bin/supervisorctl shutdown all')

@roles('testserver')
def update_testing():
    env.user = '${config:app_user}'
    projectname = '${config:projectname}'

    with cd('/home/{user}/sites/{project}/buildout'.format(user=username, project=projectname))
